{
  "name": "@mcisse/nge",
  "version": "13.0.0",
  "description": "NG Essentials is a collection of libraries for Angular developers.",
  "keywords": [
    "angular",
    "nge",
    "nge-monaco",
    "nge-markdown",
    "nge-doc"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mciissee/nge"
  },
  "bugs": {
    "url": "https://github.com/mciissee/nge/issues"
  },
  "homepage": "https://github.com/mciissee/nge",
  "author": {
    "name": "Mamadou Cisse",
    "email": "mciissee@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "ng build nge --configuration production",
    "postbuild:lib": "./scripts/postbuild.sh",
    "build:demo": "ng build demo --configuration production --base-href='https://mciissee.github.io/nge/'",
    "test": "ng test --code-coverage --watch=false --browsers=ChromeHeadless && node coverage-merger.js",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "publish:lib": "npm publish ./dist/nge --access public",
    "publish:demo": "angular-cli-ghpages --dir=./dist/demo",
    "format:check": "prettier --list-different 'projects/**/*.ts'",
    "format:write": "prettier --write 'projects/**/*.ts'",
    "release": "standard-version"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "~13.0.3",
    "@angular/cdk": "^13.0.3",
    "@angular/common": "~13.0.3",
    "@angular/compiler": "~13.0.3",
    "@angular/core": "~13.0.3",
    "@angular/forms": "~13.0.3",
    "@angular/material": "^13.0.3",
    "@angular/platform-browser": "~13.0.3",
    "@angular/platform-browser-dynamic": "~13.0.3",
    "@angular/router": "~13.0.3",
    "marked": "^2.1.3",
    "monaco-editor": "^0.30.1",
    "ngx-pipes": "^2.7.5",
    "rxjs": "~6.5.4",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.0.4",
    "@angular/cli": "~13.0.4",
    "@angular/compiler-cli": "~13.0.3",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^10.0.0",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/marked": "^2.0.3",
    "@types/node": "^12.11.1",
    "angular-cli-ghpages": "^0.6.2",
    "codelyzer": "^6.0.0",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^4.2.5",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.9",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^13.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "protractor": "~7.0.0",
    "puppeteer": "^10.1.0",
    "standard-version": "^9.3.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.4.4",
    "wait-on": "^6.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
