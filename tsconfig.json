{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "strict": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "lib": [
      "es2019",
      "dom"
    ],
    "paths": {
      "@cisstech/nge": [
        "projects/nge"
      ],
      "@cisstech/nge/directives": [
        "projects/nge/directives"
      ],
      "@cisstech/nge/doc": [
        "projects/nge/doc"
      ],
      "@cisstech/nge/elements": [
        "projects/nge/elements"
      ],
      "@cisstech/nge/monaco": [
        "projects/nge/monaco"
      ],
      "@cisstech/nge/pipes": [
        "projects/nge/pipes"
      ],
      "@cisstech/nge/services": [
        "projects/nge/services"
      ],
      "@cisstech/nge/markdown": [
        "projects/nge/markdown"
      ],
      "@cisstech/nge/utils": [
        "projects/nge/utils"
      ],
      "@cisstech/nge/ui/tree": [
        "projects/nge/ui/tree"
      ],
      "@cisstech/nge/ui/list": [
        "projects/nge/ui/list"
      ],
      "@cisstech/nge/ui/icon": [
        "projects/nge/ui/icon"
      ],
      "@cisstech/nge/ui/dialog": [
        "projects/nge/ui/dialog"
      ]
    },
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictTemplates": true,
    "strictInjectionParameters": true
  }
}
